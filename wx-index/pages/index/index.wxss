/**index.wxss**/
swiper image{
  height: 100%;
  width: 100%
} 
.box-menu{
  font-size: 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.box-line{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 30rpx 0;
}
.menu-item{
  width: 120rpx;
}
.menu-item-selected{
  background: #f8f8f8
}
.menu-item image{
  width: 90%;
  height: 105rpx;
  margin-bottom: 10rpx;
}

.box-show{
  padding: 10rpx;
  padding-top: 20rpx;
  background-color: #f8f8f8;
}
.show-title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}
.title-item{
  border-bottom: 2rpx solid #fd790e;
}
.ic-s{
  width: 40rpx;
  height: 40rpx;
}
.ic-more{
  width: 30rpx;
  height: 30rpx;
}

.show-cont{
  display: flex;
  flex-direction: row;
  justify-content: space-around
}
.show-goods{
  margin: 10rpx;
  padding: 15rpx;
  width: 350rpx;
  background-color: #fff;
}
.show-goods image{
  width: 100%;
  height: 340rpx;
}
.show-goods .goods-info{
  width: 310rpx;
  display:inline-block;   /*内联对象需加*/
  word-break:keep-all;    /* 不换行 */
  white-space:nowrap;     /* 不换行 */
  overflow:hidden;        /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis; /*当文本溢出时显示省略标记(...),需与overflow:hidden一起使用。*/
  font-size: 30rpx;
  color: #888;
}
.show-goods .new-charge{
  display: inline;
  font-size: 35rpx;
  color: #fd790e;
}
.show-goods .old-charge{
  margin-left: 20rpx;
  display: inline;
  font-size: 30rpx;
  color: #aaa;
  text-decoration: line-through;
}