/* pages/menu/market/market.wxss */ 
.container{
  width: 100%;
  position: fixed;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;
  flex-direction: column;
}
/*获取地址+搜索  */
.header{
  display: flex;
  align-items: center;
  height: 7%;
  width: 100%;
  background-color: #2af;
  padding: 10rpx;
}
.header-l{
  padding-left: 10rpx;
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
}
.icon-p{
  height: 100%;
  padding-top: 10rpx;
}
.icon-p image{
  width: 50rpx;
  height: 50rpx;
}
.place{
  color: white;
  font-size: 35rpx;
  overflow: hidden;
  white-space: nowrap;
}
.header-r{
  width: 70%;
}
.search{
  margin-left: 20rpx;
  width: 96%;
  background-color: white;
  border-radius: 100rpx;
  text-align: center
}

/*全部、综合、销量  */
.orders-top{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-title{
  padding:10rpx 20rpx;
}
.order-title image{
  width: 45rpx;
  height: 50rpx;
}
.shangpu{
  background-color: #fefefe;
  width:22%;
  text-align: center;
  border-right: solid 1rpx #fafafa;
}
.title-on{
  color: #2af;
}

/*内容  */
.content{
  position: relative;
  background-color: #fafafa;
  height: 86%;
  display: flex;
  flex-direction: row;
}
/*左侧分类标题  */
.scroll-left{
  text-align: center;
  height: 100%;
  width: 27%;
  background-color: #fff;
}
.goods-title{
  font-size: 82%;
  color: #555;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px #f9f9f9 solid;
  border-left: 10rpx #fff solid;
  text-overflow: ellipsis;
}
.title-select{
  border-left: 10rpx #2af solid;
}

.scroll-right{
  height: 100%;
  width: 73%;
}
.goods-box{
  display: flex;
  flex-direction: row;
  background-color: white;
  margin: 2%;
  padding: 2%;
  width: 100%;
}
.goods-box .img{
  width: 40%;
  height: 20vw;
  border: 1rpx solid #888888;
}
.goods-box image{
  width: 100%;
  height: 100%; 
}
.goods-info{
  width: 50%;
  padding: 5rpx 20rpx;
  font-size: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text-1{
  font-size: 80%;
  color: #666666;
}
.goods-box .new-charge{
  display: inline;
  font-size: 90%;
  color: #fd790e;
}
.goods-box .old-charge{
  margin-left: 20rpx;
  display: inline;
  font-size: 80%;
  color: #aaa;
  text-decoration: line-through;
}
.info-button{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.addtocar{
  width: 35rpx;
  height: 35rpx;
}
.info-button image{
 width: 100%;
 height: 100%;
}

/*类别*/
.classes{
  text-align: center;
  background-color: #fff;
  width: 50%;
  position: absolute;
  right: 0;
  top:0;
  z-index: 99;
  box-shadow: 5px 5px 5px #888888;
  border-left: 1rpx solid #eeeeee;
}
.class-item{
  border-bottom: 1rpx solid #f9f9f9;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
