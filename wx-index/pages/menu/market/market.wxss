/* pages/menu/market/market.wxss */ 
.container{
  width: 100%;
  position: fixed;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;
  flex-direction: column;
}
/*获取地址+搜索  */
.header{
  display: flex;
  align-items: center;
  height: 7%;
  width: 100%;
  background-color: #2af;
  padding: 10rpx;
}
.header-l{
  padding-left: 10rpx;
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
}
.icon-p{
  height: 100%;
  padding-top: 10rpx;
}
.icon-p image{
  width: 50rpx;
  height: 50rpx;
}
.place{
  color: white;
  font-size: 35rpx;
  overflow: hidden;
  white-space: nowrap;
}
.header-r{
  width: 70%;
}
.search{
  margin-left: 20rpx;
  width: 96%;
  background-color: white;
  border-radius: 100rpx;
  text-align: center
}

/*全部、综合、销量  */
.orders-top{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.order-title{
  padding:10rpx 20rpx;
}
.order-title image{
  width: 45rpx;
  height: 50rpx;
}
.title-on{
  color: #2af;
}

/*内容  */
.content{
  background-color: #fafafa;
  height: 86%;
  display: flex;
  flex-direction: row;
}
/*左侧分类标题  */
.scroll-left{
  text-align: center;
  height: 100%;
  width: 27%;
  background-color: #fff;
}
.goods-title{
  font-size: 35rpx;
  color: #555;
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1px #f9f9f9 solid;
  border-left: 10rpx #fff solid;
}
.title-select{
  border-left: 10rpx #2af solid;
}

.scroll-right{
  height: 100%;
  width: 73%;
}
.goods-box{
  display: flex;
  flex-direction: row;
  background-color: white;
  margin: 15rpx;
  padding: 15rpx;
  width: 100%;
  height: 30vw;
}
.goods-box image{
  width: 40%;
  height: 100%; 
}
.goods-info{
  padding: 5rpx 20rpx;
  font-size: 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-box .new-charge{
  display: inline;
  font-size: 35rpx;
  color: #fd790e;
}
.goods-box .old-charge{
  margin-left: 20rpx;
  display: inline;
  font-size: 30rpx;
  color: #aaa;
  text-decoration: line-through;
}
.info-button{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.addtocar{
  width: 40rpx;
  height: 40rpx; 
 margin-right: 30rpx;
}
.info-button image{
 width: 100%;
 height: 100%;
}
