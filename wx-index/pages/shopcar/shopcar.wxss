/* pages/shopcar/shopcar.wxss */
.nothing{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    color: #20ee88;
    font-size: 50rpx;
}
.nothing image{
    padding-top: 200rpx;
    padding-bottom: 80rpx;
    width: 300rpx;
    height: 300rpx;

}

.container{
    background-color: #fafafa;
}

.icon-ok{
    display: flex;
    text-align: center;
    align-items: center;
    width: 33rpx;
    height: 33rpx;
    border-radius: 40rpx;
    border: 1rpx solid #eeeeee;
    margin-right: 10rpx;
}
.on{
    background-color: #2af;
}
.icon-ok image{
    margin: 0 auto;
    width: 18rpx;
    height: 18rpx;
}
.shop-name{
    background-color: white;
    height: 50rpx;
    width: 100%;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
}

.goods-box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 20rpx;
    border-bottom: solid 1rpx #ffffff;
}
.goods-box .icon-ok{
    width: 31rpx;
    height: 31rpx;
}
.goods-img{
    width: 220rpx;
    height: 180rpx;
}
.goods-img image{
    width: 100%;
    height: 100%;
}
.goods-info{
    margin-left: 15rpx;
    width: 45%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 140rpx;
}
.goods-info .order-info{
    font-size: 27rpx;
}
.goods-info .order-kinds{
    font-size: 25rpx;
    color: #888888;
}
.goods-charge{
    padding-top: 15rpx;
    padding-right: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    font-size: 26rpx;
}

.content{
    height: 92%;
}
.bottom{
    height: 8%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}
.jiesuan{
    margin-left: 20rpx;
    height: 100%;
    width: 220rpx;
    background-color: #22aaff;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}