/* pages/user/orders/orders.wxss */
/*头部*/
.header{
    height: 45rpx;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.header .header-item{
    line-height: 100%;
    height: 100%;
    text-align: center;
    border-bottom: 2rpx solid #fff;
    width: 25%;
}
.header .on{
    border-bottom: 2rpx solid #2af;
}

.item-title{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 15rpx 25rpx;

}
.icon-ok{
    display: flex;
    text-align: center;
    align-items: center;
    width: 35rpx;
    height: 35rpx;
    border-radius: 40rpx;
    border: 1rpx solid #eeeeee;
    margin-right: 10rpx;
}
.item-title-left{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
}
.item-title-left .on{
    background-color: #2af;
}
.icon-ok image{
    margin: 0 auto;
    width: 18rpx;
    height: 18rpx;
}
.item-title-right{
    font-size: 26rpx;
    color: #2af;
}

.item-body{
    display: flex;
    flex-direction: row;
    background-color: #f9f9f9;
    padding: 20rpx 30rpx;
}
.item-body .body-img{
    width: 22%;
    height: 16vw;
}
.body-img image{
    width: 100%;
    height: 100%;
}
.body-info{
    margin-left: 15rpx;
    width: 58%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.body-info .order-info{
    font-size: 28rpx;
}
.body-info .order-kinds{
    font-size: 25rpx;
    color: #888888;
}
.body-charge{
    padding-top: 20rpx;
    padding-left: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    font-size: 26rpx;
}
.item-heji{
    padding: 10rpx;
    padding-right: 20rpx;
    text-align: right;
    font-size: 30rpx;
    border-bottom: 1rpx solid #f8f8f8;
}
.charge{
    font-size: 31rpx;
    font-weight: bold;
}
.item-bottom{
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.item-bottom button{
    display: inline-block;
    margin: 10rpx 16rpx;
    font-size: 26rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    background-color: white;
    border: solid 1rpx #ddd;
    color: #888888;
}
.item-bottom .btn-2{
    color: #2af;
    border:1rpx #2af solid;
}
